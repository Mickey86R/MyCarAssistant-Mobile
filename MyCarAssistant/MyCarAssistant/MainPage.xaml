<?xml version="1.0" encoding="utf-8" ?>
<!--СТИЛИ ДЛЯ ВСПЛЫВАЮЩЕГО МЕНЮ И ШАПКИ С НАВИГАЦИЕЙ!-->
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyCarAssistant.MainPage"
                    Shell.BackgroundColor="#141414"
                    Shell.ForegroundColor="Red"
                    Shell.TitleColor="Red"
                    Shell.DisabledColor="Red"
                    Shell.UnselectedColor="#858586"
                    
                    
                    
                    FlyoutWidth="250"
                    FlyoutBackground="LightGray"
                    FlyoutIcon="menu.png">

    <FlyoutItem Title="Главная"
                Icon="home.png">
        <!--ДИЗАЙН ВСПЛЫШАЮЩЕГО МЕНЮ ДЛЯ ОТДЕЛЬНОГО ОБЪЕКТА!-->

        <Tab Title="Главная"
             Icon="home.png">
            <ShellContent>
                <ContentPage BackgroundColor="Black">
                    <Shell.TitleView>
                        <!--Шапка приложения. Данный тэг есть на всех страницах-->
                        <Frame BackgroundColor="#141414"
                               Padding="0"
                               Margin="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.65*"/>
                                    <ColumnDefinition Width="0.15*"/>
                                    <ColumnDefinition Width="0.2*"/>
                                </Grid.ColumnDefinitions>
                                <Label Text="Главная" 
                               TextColor="LightGray"
                               VerticalOptions="Center"
                               FontAttributes="Bold"
                               Margin="85,0,0,0"
                               FontSize="20"/>

                                <Frame Grid.Column="1" BackgroundColor="#141414" Padding="9,15,9,15">
                                    <ImageButton
                                        Source="Pancil.png"
                                        BackgroundColor="#141414" 
                                        Clicked="RedactCurrentAutoButton_Clicked"/>
                                </Frame>
                                <Button 
                                    Grid.Column="2" 
                                    Text="+" 
                                    FontSize="40" 
                                    Padding="0,0,0,10"  
                                    TextColor="Red" 
                                    BackgroundColor="#141414"
                                    Clicked="AddNewAutoButton_Clicked"/>

                            </Grid>

                        </Frame>
                    </Shell.TitleView>
                    <ScrollView>
                        <StackLayout>

                            <Frame Margin="70,10,70,10" CornerRadius="20"
                               AbsoluteLayout.LayoutBounds="0,5"
                               AbsoluteLayout.LayoutFlags="XProportional"
                               Padding="30,0,30,0"
                               BackgroundColor="#141414">
                                <!-- Нужно добавить обработчик событий для Picker (Код ниже)-->
                                <Picker 
                                    x:Name="picker" 
                                    HorizontalTextAlignment="Center"
                                    SelectedIndexChanged="Picker_SelectedIndexChanged"
                                    HorizontalOptions="Center" 
                                    VerticalOptions="Center" 
                                    TextColor="Red" 
                                    FontAttributes="Bold" 
                                    FontSize="20">
                                </Picker>
                            </Frame>

                            <Image Source="GlavAuto.png"/>
                            <!-- Картинка и красная линия -->
                            <BoxView HeightRequest="1" Color="red" Margin="20,10,20,10"></BoxView>

                            <Frame Padding="0" BackgroundColor="#252525" Margin="20,0,20,0" CornerRadius="10">
                                <!--Блок с ВИН номером-->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.2*"/>
                                        <ColumnDefinition Width="0.001*"/>
                                        <ColumnDefinition Width="0.7*"/>
                                    </Grid.ColumnDefinitions>

                                    <Label Text="VIN:" Padding="8,5,0,5" FontSize="20" FontAttributes="Bold" TextColor="LightGray" VerticalOptions="Center" HorizontalOptions="Center"></Label>
                                    <Label 
                                        x:Name="currentVINLabel" 
                                        Grid.Column="2" 
                                        TextColor="White" 
                                        Margin="5,0,15,0" 
                                        TextTransform="Uppercase"
                                        VerticalOptions="Center"
                                        FontSize="20">
                                        <!--Поле ввода Vin номера-->

                                    </Label>
                                    <BoxView BackgroundColor="Red" WidthRequest="1" Grid.Column="1"></BoxView>
                                </Grid>
                            </Frame>

                            <Label Text="Характеристики авто" TextColor="#404040" Margin="20,0,20,0"></Label>
                            <BoxView HeightRequest="1" BackgroundColor="#404040" Margin="20,0,20,0"></BoxView>

                            <Frame Margin="20,0,20,0" BackgroundColor="#252525" CornerRadius="10" Padding="0">
                                <!--Блок характеристики Авто-->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.4*"/>
                                        <ColumnDefinition Width="0.6*"/>

                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="40"/>
                                        <RowDefinition Height="1"/>
                                        <RowDefinition Height="40"/>
                                        <RowDefinition Height="1"/>
                                        <RowDefinition Height="40"/>
                                        <RowDefinition Height="1"/>
                                        <RowDefinition Height="55"/>



                                    </Grid.RowDefinitions>
                                    <Label Text="Марка" TextColor="LightGray" FontSize="16" VerticalOptions="Center" Padding="10,5,0,0"></Label>
                                    <Label Grid.Row="2" Text="Модель" TextColor="LightGray" FontSize="16" VerticalOptions="Center" Padding="10,5,0,0"></Label>
                                    <Label Grid.Row="4" Text="Год выпуска" TextColor="LightGray" FontSize="16" VerticalOptions="Center" Padding="10,5,0,0"></Label>
                                    <Label Grid.Row="6" Text="Объём/мощность" TextColor="LightGray" FontSize="16" VerticalOptions="Center" Padding="10,5,0,8"></Label>
                                    <BoxView Grid.Row="1" Grid.Column="1"  BackgroundColor="#141414" Margin="0"></BoxView>
                                    <BoxView Grid.Row="1" Grid.Column="0"  BackgroundColor="#141414"></BoxView>
                                    <BoxView Grid.Row="3" Grid.Column="1"  BackgroundColor="#141414"></BoxView>
                                    <BoxView Grid.Row="3" Grid.Column="0"  BackgroundColor="#141414"></BoxView>
                                    <BoxView Grid.Row="5" Grid.Column="1"  BackgroundColor="#141414"></BoxView>
                                    <BoxView Grid.Row="5" Grid.Column="0"  BackgroundColor="#141414"></BoxView>
                                    <!--Для данных из бд -->
                                    <Label x:Name="currentMarkLabel" Grid.Column="1" TextColor="LightGray" FontSize="16" VerticalOptions="Center" HorizontalOptions="Center" Padding="10,5,0,0"></Label>
                                    <Label x:Name="currentModelLabel" Grid.Row="2" Grid.Column="1" TextColor="LightGray" FontSize="16" VerticalOptions="Center" HorizontalOptions="Center" Padding="10,5,0,0"></Label>
                                    <Label x:Name="currentYearLabel" Grid.Row="4" Grid.Column="1" TextColor="LightGray" FontSize="16" VerticalOptions="Center" HorizontalOptions="Center" Padding="10,5,0,0"></Label>
                                    <Label x:Name="currentCapaPowerLabel" Grid.Row="6" Grid.Column="1" TextColor="LightGray" FontSize="16" VerticalOptions="Center" HorizontalOptions="Center" Padding="10,5,0,0"></Label>
                                </Grid>
                            </Frame>

                            <Label Text="Показатель пробега (км)" TextColor="#404040" Margin="20,0,20,0"></Label>
                            <BoxView HeightRequest="1" BackgroundColor="#404040" Margin="20,0,20,0"></BoxView>

                            <Frame Padding="0" BackgroundColor="#252525" Margin="20,0,20,0" CornerRadius="10">
                                <!--Блок с полем ввода Пробега-->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.2*"/>
                                        <ColumnDefinition Width="0.001*"/>
                                        <ColumnDefinition Width="0.7*"/>
                                    </Grid.ColumnDefinitions>

                                    <Label Text="Пробег:" Padding="8,5,0,5" FontSize="16" FontAttributes="Bold" TextColor="LightGray" VerticalOptions="Center" HorizontalOptions="Center"></Label>
                                    <Label x:Name="currentMileageLabel" Grid.Column="2" TextColor="White" Margin="5,0,15,0"  VerticalOptions="Center" FontSize="17"></Label>
                                    <BoxView BackgroundColor="Red" WidthRequest="1" Grid.Column="1"></BoxView>
                                </Grid>
                            </Frame>

                            <Label Text="Общие показатели" TextColor="#404040" Margin="20,0,20,0"></Label>
                            <BoxView HeightRequest="1" BackgroundColor="#404040" Margin="20,0,20,0"></BoxView>

                            <Frame BackgroundColor="#252525" CornerRadius="10" Margin="20,0,20,0" Padding="0">
                                <!--Блок с общими показателями пробега и топлива-->
                                <StackLayout>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.4*"/>
                                            <ColumnDefinition Width="0.6*"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Grid.Column="0" Text="Пробег" TextColor="LightGray" Padding="10,10,0,5" FontSize="16"></Label>
                                        <Label x:Name="currentMileageGeneralLabel" Grid.Column="1" TextColor="White" Padding="10,10,0,5" Margin="10,0,15,0" VerticalOptions="Center" HorizontalOptions="Center" FontSize="16"></Label>
                                    </Grid>
                                    <BoxView HeightRequest="1" BackgroundColor="#141414" Margin="0"></BoxView>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.4*"/>
                                            <ColumnDefinition Width="0.6*"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Grid.Column="0" Text="Топливо" TextColor="LightGray" Padding="10,5,0,10" FontSize="16"></Label>
                                        <Label x:Name="currentValueGeneralLabel" Grid.Column="1" TextColor="White" Padding="10,5,0,10" Margin="10,0,15,0" VerticalOptions="Center" HorizontalOptions="Center" FontSize="16"></Label>

                                    </Grid>
                                </StackLayout>
                            </Frame>
                            <BoxView HeightRequest="1" BackgroundColor="Black" Margin="20,0,20,0"></BoxView>
                        </StackLayout>
                    </ScrollView>
                </ContentPage>
            </ShellContent>
        </Tab>
        <Tab Title="Данные" 
            Icon="DannieAuto.png">
            <ShellContent Title="ПТС">
                <ContentPage
                    BackgroundColor="black">
                    <Shell.TitleView>
                        <Frame BackgroundColor="#141414"
                               Padding="0"
                               Margin="0">
                            <Label Text="Данные" 
                               TextColor="LightGray"
                               VerticalOptions="Center"
                               FontAttributes="Bold"
                               Margin="85,0,0,0"
                               FontSize="20"/>
                        </Frame>
                    </Shell.TitleView>
                    <AbsoluteLayout>
                        <Frame 
                            AbsoluteLayout.LayoutBounds="0.5,0.3"
                            AbsoluteLayout.LayoutFlags="XProportional,YProportional"
                            BackgroundColor="Black">
                            <Label Text="Добавьте фото или документ..."
                                   TextColor="White"
                                   FontSize="15"></Label>
                        </Frame>
                        <Image x:Name="PTSIMG"/>
                        <!--Добавление кнопки в виде картинки ПТС-->
                        <ImageButton
                            AbsoluteLayout.LayoutBounds="0.5,0.914"
                            AbsoluteLayout.LayoutFlags="XProportional,YProportional"
                            Source="Plus2.png"
                            HorizontalOptions="Center"
                            VerticalOptions="End"
                            BackgroundColor="#141414"
                            BorderColor="Red"
                            BorderWidth="2"
                            WidthRequest="50"
                            HeightRequest="50"
                            CornerRadius="30"
                            Clicked="AddPTSImageButton_Clicked">
                        </ImageButton>

                    </AbsoluteLayout>
                </ContentPage>
            </ShellContent>

            <ShellContent Title="Страховка">
                <ContentPage
                    BackgroundColor="black">
                    <Shell.TitleView>
                        <Frame BackgroundColor="#141414"
                               Padding="0"
                               Margin="0">
                            <Label Text="Данные" 
                               TextColor="LightGray"
                               VerticalOptions="Center"
                               FontAttributes="Bold"
                               Margin="85,0,0,0"
                               FontSize="20"/>
                        </Frame>
                    </Shell.TitleView>
                    <AbsoluteLayout>
                        <Frame 
                            AbsoluteLayout.LayoutBounds="0.5,0.3"
                            AbsoluteLayout.LayoutFlags="XProportional,YProportional"
                            BackgroundColor="Black">
                            <Label Text="Добавьте фото или документ..."
                                   TextColor="White"
                                   FontSize="15"></Label>

                        </Frame>
                        <Image x:Name="STRIMG"/>
                        <!--Добавление кнопки в виде картинки Страховка-->
                        <ImageButton
                            AbsoluteLayout.LayoutBounds="0.5,0.914"
                            AbsoluteLayout.LayoutFlags="XProportional,YProportional"
                            Source="Plus2.png"
                            HorizontalOptions="Center"
                            VerticalOptions="End"
                            BackgroundColor="#141414"
                            BorderColor="Red"
                            BorderWidth="2"
                            WidthRequest="50"
                            HeightRequest="50"
                            CornerRadius="30"
                            Clicked="AddSTRImageButton_Clicked">

                        </ImageButton>

                    </AbsoluteLayout>
                </ContentPage>
            </ShellContent>
        </Tab>

        <!--ВКЛАДКА ОБСЛУЖИВАНИЕ-->

        <Tab Title="Обслуживание" 
            Icon="Obslugivanie.png">
            <ShellContent Title="Предстоящие работы">
                <ContentPage
                    BackgroundColor="black">
                    <Shell.TitleView>
                        <Frame BackgroundColor="#141414"
                               Padding="0"
                               Margin="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.8*"/>

                                    <ColumnDefinition Width="0.2*"/>
                                </Grid.ColumnDefinitions>
                                <Label Text="Обслуживание" 
                                   TextColor="LightGray"
                                   VerticalOptions="Center"
                                   FontAttributes="Bold"
                                   Margin="55,0,0,0"
                                   FontSize="20"/>
                                <Frame Grid.Column="1" BackgroundColor="#141414" Padding="9,15,9,15">
                                    <ImageButton  
                                        Source="Refresh.png"   
                                        BackgroundColor="#141414" 
                                        Clicked="RefreshImageButton_Clicked"/>
                                </Frame>
                            </Grid>
                        </Frame>
                    </Shell.TitleView>
                    <AbsoluteLayout>
                        <ScrollView>
                            <StackLayout>
                                <Grid HeightRequest="600">
                                    <CollectionView 
                                        x:Name="TONewCollectionView"
                                        SelectionMode="Single"
                                        SelectionChanged="TOCollectionView_SelectionChanged">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <StackLayout>
                                                    <SwipeView BackgroundColor="Black">
                                                        <!--БЛОК СВАЙПА УДАЛЕНИЯ-->
                                                        <SwipeView.RightItems>
                                                            <SwipeItems>
                                                                <SwipeItem 
                                                                    Text="Удалить"
                                                                    IconImageSource="delete.png"
                                                                    BackgroundColor="Black"
                                                                    Clicked="TODeleteSwipeItem_Clicked"/>
                                                            </SwipeItems>
                                                        </SwipeView.RightItems>
                                                        <Frame BackgroundColor="#303030" Padding="0" Margin="10,7,10,0" CornerRadius="10">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="0.4*"/>
                                                                    <ColumnDefinition Width="0.45*"/>
                                                                    <ColumnDefinition Width="0.15*"/>
                                                                </Grid.ColumnDefinitions>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="25"/>
                                                                    <RowDefinition Height="30"/>
                                                                </Grid.RowDefinitions>
                                                                <Label Grid.Row="0" Grid.Column="0" VerticalOptions="Center" HorizontalOptions="Start" Padding="10,5,0,0" FontSize="16" FontAttributes="Bold" TextColor="LightGray" Text="{Binding Name}"/>
                                                                <Label Grid.Row="1" Grid.Column="0" Padding="10,0,0,5" VerticalOptions="Center" HorizontalOptions="Start" TextColor="Gray" FontSize="14" FontAttributes="Italic" Text="{Binding Date}"/>
                                                                <Label Grid.Row="1" Grid.Column="1" Padding="0,0,0,5" VerticalOptions="Center" HorizontalOptions="End" TextColor="Gray" FontSize="14" FontAttributes="Italic" Text="{Binding Mileage}"/>
                                                                <Label Grid.Row="0" Grid.Column="1" Padding="0,5,0,0" VerticalOptions="Center" HorizontalOptions="End" TextColor="LightGray" FontSize="16" FontAttributes="Bold" Text="{Binding Sum}"/>
                                                                <Label Grid.Row="0" Grid.Column="2" Padding="0,5,0,0" VerticalOptions="Center" HorizontalOptions="Start" FontSize="14" FontAttributes="Bold" Text="Руб." TextColor="LightGray"/>
                                                                <Label Grid.Row="1" Grid.Column="2" Padding="0,0,0,5" VerticalOptions="Center" HorizontalOptions="Start" FontSize="14" Text="км" TextColor="Gray" FontAttributes="Italic"/>
                                                            </Grid>
                                                        </Frame>
                                                    </SwipeView>
                                                </StackLayout>

                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </Grid>

                            </StackLayout>
                        </ScrollView>
                        <!--Добавление кнопки "Новая запись"-->
                        <ImageButton
                            AbsoluteLayout.LayoutBounds="0.5,0.914"
                            AbsoluteLayout.LayoutFlags="XProportional,YProportional"
                            Source="Plus2.png"
                            HorizontalOptions="Center"
                            VerticalOptions="End"
                            BackgroundColor="#141414"
                            BorderColor="Red"
                            BorderWidth="2"
                            WidthRequest="50"
                            HeightRequest="50"
                            CornerRadius="30"
                            Clicked="NewTOImageButton_Clicked">

                        </ImageButton>
                    </AbsoluteLayout>
                </ContentPage>
            </ShellContent>
            <ShellContent Title="Проделанные работы">
                <ContentPage
                    BackgroundColor="black">
                    <Shell.TitleView>
                        <Frame BackgroundColor="#141414"
                               Padding="0"
                               Margin="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.8*"/>

                                    <ColumnDefinition Width="0.2*"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0"
                                    Text="Обслуживание" 
                               TextColor="LightGray"
                               VerticalOptions="Center"
                               FontAttributes="Bold"
                               Margin="55,0,0,0"
                               FontSize="20"/>

                                <Frame Grid.Column="1" BackgroundColor="#141414" Padding="9,15,9,15">
                                    <ImageButton  
                                        Source="Refresh.png"   
                                        BackgroundColor="#141414" 
                                        Clicked="RefreshImageButton_Clicked"/>
                                </Frame>
                            </Grid>
                        </Frame>
                    </Shell.TitleView>
                    <AbsoluteLayout>
                        <ScrollView>
                            <StackLayout>
                                <Grid HeightRequest="600">

                                    <CollectionView 
                                        x:Name="TOOldCollectionView"
                                        SelectionMode="Single"
                                        SelectionChanged="TOCollectionView_SelectionChanged">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <StackLayout>
                                                    <SwipeView BackgroundColor="Black">
                                                        <!--БЛОК СВАЙПА УДАЛЕНИЯ-->
                                                        <SwipeView.RightItems>
                                                            <SwipeItems>
                                                                <SwipeItem Text="Удалить"
                                                                        IconImageSource="delete.png"
                                                                        BackgroundColor="Black"
                                                                        Clicked="TODeleteSwipeItem_Clicked"/>
                                                            </SwipeItems>
                                                        </SwipeView.RightItems>
                                                        <Frame BackgroundColor="#303030" Padding="0" Margin="10,7,10,0" CornerRadius="10">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="0.4*"/>
                                                                    <ColumnDefinition Width="0.45*"/>
                                                                    <ColumnDefinition Width="0.15*"/>
                                                                </Grid.ColumnDefinitions>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="25"/>
                                                                    <RowDefinition Height="30"/>
                                                                </Grid.RowDefinitions>
                                                                <Label Grid.Row="0" Grid.Column="0" VerticalOptions="Center" HorizontalOptions="Start" Padding="10,5,0,0" FontSize="16" FontAttributes="Bold" TextColor="LightGray" Text="{Binding Name}"/>
                                                                <Label Grid.Row="1" Grid.Column="0" Padding="10,0,0,5" VerticalOptions="Center" HorizontalOptions="Start" TextColor="Gray" FontSize="14" FontAttributes="Italic" Text="{Binding Date}"/>
                                                                <Label Grid.Row="1" Grid.Column="1" Padding="0,0,0,5" VerticalOptions="Center" HorizontalOptions="End" TextColor="Gray" FontSize="14" FontAttributes="Italic" Text="{Binding Mileage}"/>
                                                                <Label Grid.Row="0" Grid.Column="1" Padding="0,5,0,0" VerticalOptions="Center" HorizontalOptions="End" TextColor="LightGray" FontSize="16" FontAttributes="Bold" Text="{Binding Sum}"/>
                                                                <Label Grid.Row="0" Grid.Column="2" Padding="0,5,0,0" VerticalOptions="Center" HorizontalOptions="Start" FontSize="14" FontAttributes="Bold" Text="Руб." TextColor="LightGray"/>
                                                                <Label Grid.Row="1" Grid.Column="2" Padding="0,0,0,5" VerticalOptions="Center" HorizontalOptions="Start" FontSize="14" Text="км" TextColor="Gray" FontAttributes="Italic"/>


                                                            </Grid>
                                                        </Frame>
                                                    </SwipeView>
                                                </StackLayout>

                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>

                                </Grid>
                            </StackLayout>
                        </ScrollView>
                        <!--Добавление кнопки "Новая запись"-->
                        <ImageButton
                            AbsoluteLayout.LayoutBounds="0.5,0.914"
                            AbsoluteLayout.LayoutFlags="XProportional,YProportional"
                            Source="Plus2.png"
                            HorizontalOptions="Center"
                            VerticalOptions="End"
                            BackgroundColor="#141414"
                            BorderColor="Red"
                            BorderWidth="2"
                            WidthRequest="50"
                            HeightRequest="50"
                            CornerRadius="30"
                            Clicked="NewTOImageButton_Clicked">

                        </ImageButton>
                    </AbsoluteLayout>
                </ContentPage>
            </ShellContent>
        </Tab>

        <!--ВКЛАДКА ЗАТРАТЫ-->

        <Tab Title="Затраты" 
            Icon="Zatrati.png">
            <ShellContent>
                <ContentPage 
                    BackgroundColor="black">
                    <Shell.TitleView>
                        <Frame BackgroundColor="#141414"
                               Padding="0"
                               Margin="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.8*"/>

                                    <ColumnDefinition Width="0.2*"/>
                                </Grid.ColumnDefinitions>
                                <Label Text="Затраты" 
                                   TextColor="LightGray"
                                   VerticalOptions="Center"
                                   FontAttributes="Bold"
                                   Margin="85,0,0,0"
                                   FontSize="20"/>
                                <Frame Grid.Column="1" BackgroundColor="#141414" Padding="9,15,9,15">
                                    <ImageButton  
                                        Source="Refresh.png"   
                                        BackgroundColor="#141414" 
                                        Clicked="RefreshImageButton_Clicked"/>
                                </Frame>
                            </Grid>
                        </Frame>
                    </Shell.TitleView>

                    <AbsoluteLayout>
                        <ScrollView>
                            <StackLayout>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.4*"/>
                                        <ColumnDefinition Width="0.48*"/>
                                        <ColumnDefinition Width="0.12*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Text="Общая сумма затрат" TextColor="Gray" FontAttributes="Italic" HorizontalOptions="Start" VerticalOptions="Center" Padding="10,5,0,0"/>
                                    <Label x:Name="SummOfExpanses" Grid.Column="1" Text="10000" TextColor="Gray" FontAttributes="Italic" HorizontalOptions="End" VerticalOptions="Center" Padding="0,5,0,0"/>
                                    <Label Grid.Column="2" Text="Руб." TextColor="Gray" FontAttributes="Italic" HorizontalOptions="Start" VerticalOptions="Center" Padding="0,5,15,0"/>
                                </Grid>
                                <BoxView BackgroundColor="#303030" HeightRequest="1"/>
                                <Grid HeightRequest="622">
                                    <CollectionView 
                                        x:Name="ExpensCollectionView"
                                        SelectionMode="Single"
                                        SelectionChanged="ExpensCollectionView_SelectionChanged">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <StackLayout>
                                                    <SwipeView BackgroundColor="Black">
                                                        <!--БЛОК СВАЙПА УДАЛЕНИЯ-->
                                                        <SwipeView.RightItems>
                                                            <SwipeItems>
                                                                <SwipeItem Text="Удалить"
                                                                    IconImageSource="delete.png"
                                                                    BackgroundColor="Black"
                                                                    Clicked="ExpensDeleteSwipeItem_Clicked"/>
                                                            </SwipeItems>
                                                        </SwipeView.RightItems>

                                                        <Frame BackgroundColor="#303030" Padding="0" Margin="10,7,10,0" CornerRadius="10">
                                                            <StackLayout>
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="0.55*"/>
                                                                        <ColumnDefinition Width="0.30*"/>
                                                                        <ColumnDefinition Width="0.15*"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <Label Grid.Row="0" Grid.Column="1" Padding="0,5,0,0" VerticalOptions="Center" HorizontalOptions="End" TextColor="LightGray" FontSize="16" FontAttributes="Bold" Text="{Binding Sum}"/>
                                                                    <Label Grid.Row="0" Grid.Column="0" VerticalOptions="Center" HorizontalOptions="Start" Padding="10,5,0,0" FontSize="16" FontAttributes="Bold" TextColor="LightGray" Text="{Binding Text}"/>
                                                                    <Label Grid.Row="0" Grid.Column="2" Padding="0,5,0,0" VerticalOptions="Center" HorizontalOptions="Start" FontSize="14" FontAttributes="Bold" Text="Руб." TextColor="LightGray"/>
                                                                </Grid>
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="0.45*"/>
                                                                        <ColumnDefinition Width="0.20*"/>
                                                                        <ColumnDefinition Width="0.10*"/>
